rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // LEADS & CONTACTS: Allows anyone to submit forms, but only
    // authenticated admins can read or manage the data.
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // CHAT: Allows anyone to create a chat session and send messages.
    // Admins have full access to manage and read all conversations.
    match /chats/{chatId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
      
      match /messages/{messageId} {
        // Allows any user (even unauthenticated) to send a message to a chat.
        // Admins can read all messages.
        allow create: if true;
        allow read, update, delete: if request.auth != null;
      }
    }
    
    // BEHAVIOR ANALYTICS: Allows anyone to log a page view, but only
    // authenticated admins can read the collected data.
    match /pageViews/{viewId} {
      allow create: if true;
      allow read: if request.auth != null;
    }
  }
}
